
public class EjemploUno {
	public static void main(String[]args) {
		
		byte diasMes= 31;
		short diasLustros= (12*31)*5;
		int velocidadLuz= 22021020;
		long añosLuz= velocidadLuz*365;
		
		System.out.println("Los dias del mes son :" + diasMes + "Los dias lustros son :" 
									+ diasLustros  +  "la velocidad de la luz es:"  +  velocidadLuz
									+ "Los años luz son : "  +  añosLuz);
	}
}
