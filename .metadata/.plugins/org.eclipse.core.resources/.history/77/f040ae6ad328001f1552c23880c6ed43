package estructurasIterativasFor;

import javax.swing.JOptionPane;

public class ejemploTres {
	public static void main (String[]args) {
	
		// se crea un programa con el for el cual nos arrogÂ¿jara dos veces si somos mayores de edad o si no con el else nos dira que no lo somos una vez
		int edad=Integer.parseInt(JOptionPane.showInputDialog("Ingrese su edad"));
		
		if(edad >= 18) {
		
			for(int i=0; i<=1; i++) {
			
				System.out.println("Su Usted es mayor de edad");
			}
		}else {
			System.out.println("Usted es menor de edad");
		}
	}
}
